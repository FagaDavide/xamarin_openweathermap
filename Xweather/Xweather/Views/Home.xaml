<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xweather.Views.Home"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="cityName: " HorizontalOptions="Start" 
                   TextColor="Black" FontSize="Medium" />
            <Editor Text="{ Binding name }" HorizontalOptions="CenterAndExpand" 
                   TextColor="Black" />
            <Label Text="{ Binding name }" HorizontalOptions="Start" 
                   TextColor="Black" FontSize="Medium" />
            <Label Text="{ Binding weatherInfoTmp }" HorizontalOptions="Start" 
                   TextColor="Black" FontSize="Medium" />
            <Label Text="HOME"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button
                x:Name = "button1" Text="Click My Tralala, my Dingdingdong" 
                BackgroundColor="Pink" TextColor="Black"
                Clicked = "OnClick"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>