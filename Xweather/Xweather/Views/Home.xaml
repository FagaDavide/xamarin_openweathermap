<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xweather.Views.Home"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <Entry  Completed="OnClickSendRequest" Text="{ Binding SearchCity }" HorizontalOptions="CenterAndExpand" 
                    TextTransform="Uppercase" TextColor="Black" WidthRequest="300" HeightRequest="100" Placeholder="Enter the city" 
                    ReturnType="Send" IsSpellCheckEnabled="True" IsTextPredictionEnabled="false" ClearButtonVisibility="WhileEditing"/>
            <Label Text="{ Binding Wr.weather[0].description }" HorizontalOptions="Start" 
                   TextColor="Black" FontSize="Medium" />
            <Image HeightRequest="100" WidthRequest="100" Source="{ Binding Wr.weather[0].GetIcon }"/>

            <Button
                x:Name = "button1" Text="Click My Tralala, my Dingdingdong" 
                BackgroundColor="Pink" TextColor="Black"
                Clicked = "OnClickSendRequest"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>